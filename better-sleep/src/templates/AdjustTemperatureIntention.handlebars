const pddlActionIntention = require("../../../../../../lib/pddl/actions/pddlActionIntention");

class Adjust{{time}}LightTemperature{{roomName}}Intention extends pddlActionIntention {
    static parameters = [
        "{{roomName}}-main_light",
        "time",
        "{{roomName}}",
    ];
    static precondition = [
        ["LIGHT", "{{roomName}}-main_light"],
        ["DAYTIME", "time"],
        ["{{upper time}}", "time"],
        ["ROOM", "{{roomName}}"],
        ["{{upper roomName}}", "{{roomName}}"],
        ["on", "{{roomName}}-main_light"],
        ["not {{lower time}}-temp", "{{roomName}}-main_light"],
        ["not free", "{{roomName}}"],
    ];
    static effect = [
        ["not {{not}}-temp", "{{roomName}}-main_light"],
        ["{{lower time}}-temp", "{{roomName}}-main_light"],
    ];

    *exec() {
        let mainLight = this.agent.rooms["{{roomName}}"].mainLight;
        yield mainLight.setTemperature({{temperature}});
        for (let b of this.effect) this.agent.beliefs.apply(b);
    }
}

module.exports = Adjust{{time}}LightTemperature{{roomName}}Intention;
